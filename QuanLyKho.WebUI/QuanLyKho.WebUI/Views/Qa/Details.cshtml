@model QuanLyKho.WebUI.Models.QARecordViewModel
@{
    ViewBag.Title = "QA Details";
    ViewBag.PageTitle = "👁️ Chi tiết kiểm tra QA";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2 class="text-xl font-semibold text-white mb-4">@ViewBag.PageTitle #@Model.QAID</h2>

<div class="overflow-hidden rounded-lg border border-slate-700">
    <table class="min-w-full text-sm text-slate-300">
        <tbody>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">ReceivingID</td><td class="px-4 py-2">@Model.ReceivingID</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">LineID</td><td class="px-4 py-2">@Model.LineID</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">SKU</td><td class="px-4 py-2">@Model.SKU</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">Ngày kiểm</td><td class="px-4 py-2">@Model.CheckDate.ToString("dd/MM/yyyy HH:mm")</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">Người kiểm</td><td class="px-4 py-2">@Model.Inspector</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">Tiêu chí</td><td class="px-4 py-2">@Model.Criteria</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">Kết quả</td><td class="px-4 py-2">@Model.Result</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">Trạng thái</td><td class="px-4 py-2">@Model.Status</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">Ghi chú</td><td class="px-4 py-2">@Model.Notes</td></tr>
            <tr><td class="px-4 py-2 font-semibold text-slate-200">Tệp đính kèm</td><td class="px-4 py-2">@Model.AttachmentUrl</td></tr>
        </tbody>
    </table>
</div>

<div class="mt-6 flex gap-3">
    <a href="/Qa/Edit/@Model.QAID" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-md text-sm flex items-center gap-2">
        <i data-lucide="edit" class="w-4 h-4"></i> Sửa
    </a>
    <a href="/Qa/Delete/@Model.QAID?receivingId=@Model.ReceivingID" onclick="return confirm('Xóa QA record này?')" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm flex items-center gap-2">
        <i data-lucide="trash-2" class="w-4 h-4"></i> Xóa
    </a>
    <a href="/Qa/ByReceiving?receivingId=@Model.ReceivingID" class="text-blue-400 hover:text-blue-300 flex items-center gap-2">
        <i data-lucide="arrow-left" class="w-4 h-4"></i> Quay lại danh sách QA
    </a>
</div>

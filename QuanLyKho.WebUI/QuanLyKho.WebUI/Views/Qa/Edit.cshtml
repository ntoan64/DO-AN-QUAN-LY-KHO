@model QuanLyKho.WebUI.Models.QARecordViewModel
@{
    ViewBag.Title = "Edit QA";
    ViewBag.PageTitle = "✏️ Chỉnh sửa kiểm tra QA";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2 class="text-xl font-semibold text-white mb-6">@ViewBag.PageTitle #@Model.QAID</h2>

@if (ViewBag.Error != null)
{
    <div class="text-red-400 mb-4">@ViewBag.Error</div>
}

<form method="post" action="/Qa/Edit/@Model.QAID" class="space-y-4 max-w-xl">
    <input type="hidden" name="ReceivingID" value="@Model.ReceivingID" />

    <div>
        <label class="block mb-1 text-slate-300">LineID</label>
        <input type="number" name="LineID" value="@Model.LineID" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">SKU</label>
        <input type="text" name="SKU" value="@Model.SKU" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Người kiểm</label>
        <input type="text" name="Inspector" value="@Model.Inspector" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Tiêu chí</label>
        <input type="text" name="Criteria" value="@Model.Criteria" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Kết quả</label>
        <input type="text" name="Result" value="@Model.Result" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Trạng thái</label>
        <input type="text" name="Status" value="@Model.Status" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Ghi chú</label>
        <textarea name="Notes" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100">@Model.Notes</textarea>
    </div>
    <div>
        <label class="block mb-1 text-slate-300">File/Link đính kèm</label>
        <input type="text" name="AttachmentUrl" value="@Model.AttachmentUrl" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>

    <div class="flex gap-4 mt-6">
        <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-md flex items-center gap-2">
            <i data-lucide="save" class="w-4 h-4"></i> Lưu thay đổi
        </button>
        <a href="/Qa/ByReceiving?receivingId=@Model.ReceivingID" class="text-slate-300 hover:text-slate-100 flex items-center gap-2">
            <i data-lucide="arrow-left" class="w-4 h-4"></i> Quay lại
        </a>
    </div>
</form>

@model QuanLyKho.WebUI.Models.ReplenishmentTaskViewModel
@{
    ViewBag.Title = "Create Replenishment";
    ViewBag.PageTitle = "➕ Tạo nhiệm vụ bổ sung tồn kho";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2 class="text-xl font-semibold text-white mb-6">@ViewBag.PageTitle</h2>

<form method="post" action="/Replenishment/Create" class="space-y-4 max-w-xl">
    <div>
        <label class="block mb-1 text-slate-300">SKU</label>
        <input type="text" name="SKU" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" required />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Từ vị trí</label>
        <input type="text" name="FromLocation" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Đến vị trí</label>
        <input type="text" name="ToLocation" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Số lượng</label>
        <input type="number" name="Quantity" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Người thực hiện</label>
        <input type="text" name="AssignedTo" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Trạng thái</label>
        <input type="text" name="Status" value="Pending" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Ghi chú</label>
        <textarea name="Note" rows="3" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100"></textarea>
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Người tạo</label>
        <input type="text" name="CreatedBy" value="admin" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>

    <div class="flex gap-4 mt-6">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md flex items-center gap-2">
            <i data-lucide="save" class="w-4 h-4"></i> Lưu nhiệm vụ
        </button>
        <a href="/Replenishment/Index" class="text-slate-300 hover:text-slate-100 flex items-center gap-2">
            <i data-lucide="arrow-left" class="w-4 h-4"></i> Quay lại
        </a>
    </div>
</form>

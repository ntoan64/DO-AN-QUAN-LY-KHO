@model List<QuanLyKho.WebUI.Models.ReplenishmentTaskViewModel>
@{
    ViewBag.Title = "Replenishment List";
    ViewBag.PageTitle = "🔁 Danh sách nhiệm vụ bổ sung tồn kho";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-xl font-semibold text-white">@ViewBag.PageTitle</h2>

    <a href="/Replenishment/Create"
       class="flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition">
        <i data-lucide="plus-circle" class="w-4 h-4"></i> Tạo nhiệm vụ mới
    </a>
</div>

<div class="overflow-x-auto border border-slate-700 rounded-lg shadow">
    <table class="min-w-full text-sm text-slate-300">
        <thead class="bg-slate-800 text-slate-200">
            <tr>
                <th class="px-3 py-2 text-left">ID</th>
                <th class="px-3 py-2 text-left">SKU</th>
                <th class="px-3 py-2 text-left">Từ vị trí</th>
                <th class="px-3 py-2 text-left">Đến vị trí</th>
                <th class="px-3 py-2 text-center">Số lượng</th>
                <th class="px-3 py-2 text-left">Người thực hiện</th>
                <th class="px-3 py-2 text-center">Trạng thái</th>
                <th class="px-3 py-2 text-left">Ghi chú</th>
                <th class="px-3 py-2 text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var x in Model)
                {
                    <tr class="hover:bg-slate-800/60 transition">
                        <td class="px-3 py-2">@x.TaskID</td>
                        <td class="px-3 py-2">@x.SKU</td>
                        <td class="px-3 py-2">@x.FromLocation</td>
                        <td class="px-3 py-2">@x.ToLocation</td>
                        <td class="px-3 py-2 text-center">@x.Quantity</td>
                        <td class="px-3 py-2">@x.AssignedTo</td>
                        <td class="px-3 py-2 text-center">@x.Status</td>
                        <td class="px-3 py-2">@x.Note</td>
                        <td class="px-3 py-2 text-center space-x-2">
                            <a href="/Replenishment/Details/@x.TaskID" class="text-blue-400 hover:text-blue-300"><i data-lucide="eye" class="w-4 h-4 inline"></i></a>
                            <a href="/Replenishment/Edit/@x.TaskID" class="text-yellow-400 hover:text-yellow-300"><i data-lucide="edit" class="w-4 h-4 inline"></i></a>
                            <a href="/Replenishment/Delete/@x.TaskID" onclick="return confirm('Xóa nhiệm vụ này?')" class="text-red-400 hover:text-red-300"><i data-lucide="trash-2" class="w-4 h-4 inline"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="9" class="text-center py-4 text-slate-400">Không có dữ liệu bổ sung.</td></tr>
            }
        </tbody>
    </table>
</div>

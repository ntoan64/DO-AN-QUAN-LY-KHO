@model QuanLyKho.WebUI.Models.ReplenishmentTaskViewModel
@{
    ViewBag.Title = "Replenishment Details";
    ViewBag.PageTitle = "📄 Chi tiết nhiệm vụ bổ sung tồn kho";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2 class="text-xl font-semibold text-white mb-4">@ViewBag.PageTitle #@Model.TaskID</h2>

<div class="overflow-hidden rounded-lg border border-slate-700">
    <table class="min-w-full text-sm text-slate-300">
        <tbody>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">SKU</td><td class="px-4 py-2">@Model.SKU</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">Từ vị trí</td><td class="px-4 py-2">@Model.FromLocation</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">Đến vị trí</td><td class="px-4 py-2">@Model.ToLocation</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">Số lượng</td><td class="px-4 py-2">@Model.Quantity</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">Người thực hiện</td><td class="px-4 py-2">@Model.AssignedTo</td></tr>
            <tr class="border-b border-slate-700"><td class="px-4 py-2 font-semibold text-slate-200">Trạng thái</td><td class="px-4 py-2">@Model.Status</td></tr>
            <tr><td class="px-4 py-2 font-semibold text-slate-200">Ghi chú</td><td class="px-4 py-2">@Model.Note</td></tr>
        </tbody>
    </table>
</div>

<div class="mt-6 flex gap-3">
    <a href="/Replenishment/Edit/@Model.TaskID" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-md text-sm flex items-center gap-2">
        <i data-lucide="edit" class="w-4 h-4"></i> Sửa
    </a>
    <a href="/Replenishment/Delete/@Model.TaskID" onclick="return confirm('Xóa nhiệm vụ này?')" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm flex items-center gap-2">
        <i data-lucide="trash-2" class="w-4 h-4"></i> Xóa
    </a>
    <a href="/Replenishment/Index" class="text-blue-400 hover:text-blue-300 flex items-center gap-2">
        <i data-lucide="arrow-left" class="w-4 h-4"></i> Quay lại danh sách
    </a>
</div>

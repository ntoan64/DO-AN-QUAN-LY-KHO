@model QuanLyKho.WebUI.Models.SmartSlottingViewModel
@{
    ViewBag.Title = "Create Smart Slotting";
    ViewBag.PageTitle = "➕ Tạo khuyến nghị vị trí (Smart Slotting)";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2 class="text-xl font-semibold text-white mb-6">@ViewBag.PageTitle</h2>

<form method="post" action="/SmartSlotting/Create" class="space-y-4 max-w-xl">
    <div>
        <label class="block mb-1 text-slate-300">SKU</label>
        <input type="text" name="SKU" required class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Tên sản phẩm</label>
        <input type="text" name="ProductName" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Vị trí hiện tại</label>
        <input type="text" name="CurrentLocation" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Vị trí đề xuất</label>
        <input type="text" name="RecommendedLocation" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Velocity</label>
        <input type="text" name="VelocityLevel" value="Medium" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Trọng lượng (kg)</label>
        <input type="number" step="0.01" name="Weight" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Danh mục</label>
        <input type="text" name="Category" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Ghi chú</label>
        <textarea name="Note" rows="3" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100"></textarea>
    </div>

    <div class="flex gap-4 mt-6">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md flex items-center gap-2">
            <i data-lucide="save" class="w-4 h-4"></i> Lưu khuyến nghị
        </button>
        <a href="/SmartSlotting/Index" class="text-slate-300 hover:text-slate-100 flex items-center gap-2">
            <i data-lucide="arrow-left" class="w-4 h-4"></i> Quay lại
        </a>
    </div>
</form>

@model QuanLyKho.WebUI.Models.SmartSlottingViewModel
@{
    ViewBag.Title = "Edit Smart Slotting";
    ViewBag.PageTitle = "✏️ Sửa khuyến nghị vị trí (Smart Slotting)";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2 class="text-xl font-semibold text-white mb-6">@ViewBag.PageTitle #@Model.SlotID</h2>

<form method="post" action="/SmartSlotting/Edit/@Model.SlotID" class="space-y-4 max-w-xl">
    <div>
        <label class="block mb-1 text-slate-300">SKU</label>
        <input type="text" name="SKU" value="@Model.SKU" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Tên sản phẩm</label>
        <input type="text" name="ProductName" value="@Model.ProductName" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Vị trí hiện tại</label>
        <input type="text" name="CurrentLocation" value="@Model.CurrentLocation" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Vị trí đề xuất</label>
        <input type="text" name="RecommendedLocation" value="@Model.RecommendedLocation" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Velocity</label>
        <input type="text" name="VelocityLevel" value="@Model.VelocityLevel" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Trọng lượng</label>
        <input type="number" step="0.01" name="Weight" value="@Model.Weight" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Danh mục</label>
        <input type="text" name="Category" value="@Model.Category" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100" />
    </div>
    <div>
        <label class="block mb-1 text-slate-300">Ghi chú</label>
        <textarea name="Note" class="w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded-md text-slate-100">@Model.Note</textarea>
    </div>

    <div class="flex gap-4 mt-6">
        <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-md flex items-center gap-2">
            <i data-lucide="save" class="w-4 h-4"></i> Lưu thay đổi
        </button>
        <a href="/SmartSlotting/Index" class="text-slate-300 hover:text-slate-100 flex items-center gap-2">
            <i data-lucide="arrow-left" class="w-4 h-4"></i> Quay lại
        </a>
    </div>
</form>

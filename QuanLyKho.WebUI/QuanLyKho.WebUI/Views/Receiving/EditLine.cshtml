@model QuanLyKho.WebUI.Models.ReceivingLineViewModel
@{
    ViewBag.Title = "Sửa dòng hàng";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="p-6 space-y-6">
    <h2 class="text-2xl font-semibold text-white flex items-center gap-2">
        <i data-lucide="edit" class="w-6 h-6 text-yellow-400"></i>
        Sửa dòng hàng #@ViewBag.LineID
    </h2>

    <form method="post" action="/Receiving/EditLine/@ViewBag.LineID" class="space-y-5">
        <input type="hidden" name="ReceivingID" value="@ViewBag.ReceivingID" />

        <div class="grid grid-cols-2 gap-4">
            <div><label class="block text-slate-300 mb-1">SKU</label><input type="text" name="SKU" value="@Model.SKU" class="input-dark" /></div>
            <div><label class="block text-slate-300 mb-1">Tên sản phẩm</label><input type="text" name="ProductName" value="@Model.ProductName" class="input-dark" /></div>
            <div><label class="block text-slate-300 mb-1">Số lượng</label><input type="number" name="Quantity" value="@Model.Quantity" class="input-dark" /></div>
            <div><label class="block text-slate-300 mb-1">ĐVT</label><input type="text" name="UOM" value="@Model.UOM" class="input-dark" /></div>
            <div><label class="block text-slate-300 mb-1">Tình trạng</label><input type="text" name="ConditionStatus" value="@Model.ConditionStatus" class="input-dark" /></div>
        </div>

        <div>
            <label class="block text-slate-300 mb-1">Ghi chú</label>
            <textarea name="Remark" class="input-dark w-full">@Model.Remark</textarea>
        </div>

        <div class="flex justify-between items-center">
            <a href="/Receiving/Details/@ViewBag.ReceivingID" class="text-slate-400 hover:text-slate-200">⬅ Quay lại</a>
            <button type="submit" class="btn-blue"><i data-lucide="save" class="w-5 h-5"></i> Lưu thay đổi</button>
        </div>
    </form>
</div>

@section Scripts {
     <script>lucide.createIcons()</script>
}

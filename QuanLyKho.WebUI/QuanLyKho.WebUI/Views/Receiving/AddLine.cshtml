@model QuanLyKho.WebUI.Models.ReceivingLineViewModel
@{
    ViewBag.Title = "Thêm dòng hàng";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="p-6 space-y-6">
    <h2 class="text-2xl font-semibold text-white flex items-center gap-2">
        <i data-lucide="plus" class="w-6 h-6 text-blue-400"></i>
        Thêm dòng hàng cho phiếu nhập #@ViewBag.ReceivingID
    </h2>

    @if (ViewBag.Error != null)
    {
        <div class="bg-red-100 text-red-700 px-4 py-2 rounded">@ViewBag.Error</div>
    }

    <form method="post" action="/Receiving/AddLine" class="space-y-5">
        <input type="hidden" name="ReceivingID" value="@ViewBag.ReceivingID" />

        <div class="grid grid-cols-2 gap-4">
            <div><label class="block text-slate-300 mb-1">SKU</label><input type="text" name="SKU" required class="input-dark" /></div>
            <div><label class="block text-slate-300 mb-1">Tên sản phẩm</label><input type="text" name="ProductName" required class="input-dark" /></div>
            <div><label class="block text-slate-300 mb-1">Số lượng</label><input type="number" name="Quantity" required class="input-dark" /></div>
            <div><label class="block text-slate-300 mb-1">Đơn vị tính</label><input type="text" name="UOM" value="pcs" class="input-dark" /></div>
            <div><label class="block text-slate-300 mb-1">Mã vị trí kho</label><input type="number" name="LocationID" value="1" class="input-dark" /></div>
            <div><label class="block text-slate-300 mb-1">Tình trạng</label><input type="text" name="ConditionStatus" value="Good" class="input-dark" /></div>
            <div><label class="block text-slate-300 mb-1">Mã barcode</label><input type="text" name="Barcode" class="input-dark" /></div>
        </div>

        <div>
            <label class="block text-slate-300 mb-1">Ghi chú</label>
            <textarea name="Remark" rows="2" class="input-dark w-full"></textarea>
        </div>

        <div class="flex justify-between items-center">
            <a href="/Receiving/Details/@ViewBag.ReceivingID" class="text-slate-400 hover:text-slate-200">⬅ Quay lại phiếu nhập</a>
            <button type="submit" class="btn-blue"><i data-lucide="save" class="w-5 h-5"></i> Lưu dòng hàng</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}

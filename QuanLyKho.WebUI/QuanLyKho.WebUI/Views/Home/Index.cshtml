@model QuanLyKho.WebUI.Controllers.DashboardViewModel
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Dashboard";
    ViewBag.PageTitle = "Dashboard";
    ViewBag.ActiveMenu = "Dashboard";
}


<section>
    <h2 class="text-white text-xl font-bold mb-6">Các Module Chính</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 mb-12">
        <!-- Receiving -->

        <div class="grid grid-cols-4 gap-4 mb-6">
            <div class="bg-slate-800 rounded-lg p-4 shadow-md">
                <p class="text-sm text-slate-400">Receiving Tasks</p>
                <p class="text-2xl font-semibold text-blue-400 mt-1">10</p>
            </div>
            <div class="bg-slate-800 rounded-lg p-4 shadow-md">
                <p class="text-sm text-slate-400">Pending QA</p>
                <p class="text-2xl font-semibold text-yellow-400 mt-1">3</p>
            </div>
            <div class="bg-slate-800 rounded-lg p-4 shadow-md">
                <p class="text-sm text-slate-400">Inventory SKUs</p>
                <p class="text-2xl font-semibold text-green-400 mt-1">125</p>
            </div>
            <div class="bg-slate-800 rounded-lg p-4 shadow-md">
                <p class="text-sm text-slate-400">Active Users</p>
                <p class="text-2xl font-semibold text-purple-400 mt-1">8</p>
            </div>
        </div>

        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-blue-500/10 transition">
            <div class="flex items-start justify-between mb-4">
                <div class="icon-box blue">
                    <i data-lucide="file" class="w-6 h-6"></i>
                </div>
                <span class="text-2xl font-bold text-slate-300">@Model.TotalReceiving</span>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1">Receiving</h3>
            <p class="text-sm text-slate-400 mb-4">Phiếu nhập hàng từ nhà cung cấp</p>
            <a href="/Receiving/Index" class="block bg-blue-600 hover:bg-blue-700 text-white text-center py-2 rounded-md">Truy cập</a>
        </div>

        <!-- Assembly -->
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-blue-500/10 transition">
            <div class="flex items-start justify-between mb-4">
                <div class="icon-box" style="background:linear-gradient(135deg,#a855f7 0%,#7c3aed 100%);">
                    <i data-lucide="package" class="w-6 h-6"></i>
                </div>
                <span class="text-2xl font-bold text-slate-300">0</span>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1">Assembly</h3>
            <p class="text-sm text-slate-400 mb-4">Lắp ráp / sản xuất nội bộ</p>
            <a href="/Assembly/Index" class="block bg-blue-600 hover:bg-blue-700 text-white text-center py-2 rounded-md">Truy cập</a>
        </div>

        <!-- Picking -->
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-blue-500/10 transition">
            <div class="flex items-start justify-between mb-4">
                <div class="icon-box" style="background:linear-gradient(135deg,#f97316 0%,#ea580c 100%);">
                    <i data-lucide="shopping-cart" class="w-6 h-6"></i>
                </div>
                <span class="text-2xl font-bold text-slate-300">@Model.TotalPicking</span>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1">Picking</h3>
            <p class="text-sm text-slate-400 mb-4">Phiếu chọn hàng / xuất kho</p>
            <a href="/Picking/Index" class="block bg-blue-600 hover:bg-blue-700 text-white text-center py-2 rounded-md">Truy cập</a>
        </div>

        <!-- Inventory -->
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-blue-500/10 transition">
            <div class="flex items-start justify-between mb-4">
                <div class="icon-box" style="background:linear-gradient(135deg,#22c55e 0%,#16a34a 100%);">
                    <i data-lucide="bar-chart-2" class="w-6 h-6"></i>
                </div>
                <span class="text-2xl font-bold text-slate-300">@Model.TotalInventoryItems</span>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1">Inventory</h3>
            <p class="text-sm text-slate-400 mb-4">Quản lý số dư tồn kho hiện tại</p>
            <a href="/Inventory/Index" class="block bg-blue-600 hover:bg-blue-700 text-white text-center py-2 rounded-md">Truy cập</a>
        </div>

        <!-- Labor -->
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6 hover:shadow-lg hover:shadow-blue-500/10 transition">
            <div class="flex items-start justify-between mb-4">
                <div class="icon-box" style="background:linear-gradient(135deg,#ef4444 0%,#dc2626 100%);">
                    <i data-lucide="users" class="w-6 h-6"></i>
                </div>
                <span class="text-2xl font-bold text-slate-300">@Model.TotalLaborRecords</span>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1">Labor Tracking</h3>
            <p class="text-sm text-slate-400 mb-4">Ghi nhận năng suất và giờ làm của nhân viên</p>
            <a href="/Labor/Index" class="block bg-blue-600 hover:bg-blue-700 text-white text-center py-2 rounded-md">Truy cập</a>
        </div>

    </div>
</section>

